{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "POPULIX"
  },
  "paths": {
    "/user/create": {
      "post": {
        "tags": [
          "Create Account"
        ],
        "summary": "Create Account",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "profileImage": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Create User",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "string",
                      "example": "Successfully createAccount"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: invalid or expired token"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "User login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "your username"
                  },
                  "password": {
                    "type": "string",
                    "example": "your password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "string",
                      "example": "your token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: invalid or expired token"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/profile": {
      "get": {
        "security":{
          "Bearer": []
         },
        "tags": [
          "User Profile"
        ],
        "summary": "Get User Profile",
        "description": "Returns the user profile data.",
        
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "example": {
                        "userId": 2,
                        "fullName": "full name",
                        "description": "description",
                        "phoneNumber": "123456",
                        "profileImage": "Binary Format"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: invalid or expired token"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/update-profile": {
      "put": {
        "security":{
          "Bearer": []
         },
        "tags": [
          "Update Profile"
        ],
        "summary": "Update user profile",
        "description": "This API updates user profile details like full name, description, phone number, and profile image.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "phoneNumber": {
                    "type": "string"
                  },
                  "profileImage": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update Profile",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized: invalid or expired token"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/update-password": {
      "put": {
        "security":{
          "Bearer": []
         },
        "tags": [
          "Update Password"
        ],
        "summary": "Update user's password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPassword": {
                    "type": "string"
                  },
                  "retypePassword": {
                    "type": "string"
                  },
                  "newPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password updated successfully"
          },
          "401": {
            "description": "Unauthorized: invalid or expired token"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes":{
      "Bearer":{
        "type":"apiKey",
        "in":"header",
        "name":"Authorization",
        "description":"Enter the token with the `Bearer: ` prefix, e.g. Bearer abcde12345"
      }
    },
    "responses": {
      "ServerError": {
        "description": "Server error.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}